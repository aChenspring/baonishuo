.bt-submit {
  border-radius: 15px;
  margin: 20rpx auto;
  width: 80%;
  height: 30px;
  text-align: center;
  line-height: 30px;
  background-color: #db5943;
  color: white;
  font-size: 30rpx;
}

.text-message3 {
  font-size: 12px;
  line-height: 40px;
  color: #70788d;
}

.home-bts {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  padding: 5rpx;
  left: 0;
  right: 0;
  bottom: 0;
  justify-content: space-around;
}

.bt-records {
  display: flex;
  flex-direction: column;
}

.bt-records image {
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}

.bt-money {
  display: flex;
  flex-direction: column;
}

.bt-money image {
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}

.bt-question {
  display: flex;
  flex-direction: column;
}

.bt-question image {
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
}
