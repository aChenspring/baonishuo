.home-container {
  padding-top: 30px;
  text-align: center;
}

.home-content {
  text-align: center;
  background-color: #fff;
  width: 85%;
  margin: 0 auto;
  padding: 30rpx;
  border-radius: 10px;
}

.home-user-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20px;
  border-radius: 50rpx;
}

.commands {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 10rpx;
}

.commands text {
  margin-top: 6rpx;
  font-size: 30rpx;
}

.input-command {
  width: 450rpx;
  border-bottom: 1px solid #d8d8d8;
}

.messages {
  display: flex;
  flex-direction: row;
  margin-bottom: 25rpx;
}

.text-message {
  color: #888;
  margin: 10rpx 4rpx 10rpx 18rpx;
}

.text-message-img {
  width: 25rpx;
  height: 25rpx;
  margin-top: 15rpx;
}

.moneys {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.moneys text {
  margin-top: 6rpx;
  font-size: 30rpx;
}

.input-money {
  width: 450rpx;
  border-bottom: 1px solid #d8d8d8;
}

.nums {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 50rpx;
}

.nums text {
  margin-top: 6rpx;
  font-size: 30rpx;
}

.input-num {
  width: 450rpx;
  border-bottom: 1px solid #d8d8d8;
}

.text-message2 {
  color: #888;
}

