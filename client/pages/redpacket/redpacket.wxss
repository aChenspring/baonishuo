.redpacket-container {
  display: flex;
  flex-direction: column;
}

.redpacket-content {
  background-color: #dd6044;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.redicon {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx auto;
}

.red-name {
  color: #ebcb95;
  font-size: 35rpx;
  margin-bottom: 45rpx;
}

.red-title {
  color: #ebcb95;
  font-size: 35rpx;
  margin-bottom: 50rpx;
}

.bt-submit {
  background-color: #4cb050;
  color: white;
  font-size: 25rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  width: 60%;
  margin-bottom: 50rpx;
}

.red-action-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.red-action-container view> image {
  width: 40rpx;
  height: 40rpx;
}

.red-action-container view> text {
  color: white;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
}

.red-action-enchashment {
  display: flex;
}

.red-below-container {
  text-align: center;
  display: flex;
  flex-direction: column;
}

.red-below-container-title {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
}

.red-below-container-list {
}

.red-below-container-line {
  width: 60%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 10rpx auto;
 
}

.red-below-container-line .line{
  background-color: #bfbfbf;
  margin: 10rpx;
  height: 1rpx;
  width: 40%;
}
